local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")
local player = Players.LocalPlayer
local Cmd = {}
Cmd.Commands = {}

--// UI ch√≠nh
local ScreenGui = Instance.new("ScreenGui", player:WaitForChild("PlayerGui"))
ScreenGui.Name = "VLN_Command_UI"
ScreenGui.ResetOnSpawn = false

local Frame = Instance.new("Frame", ScreenGui)
Frame.Size = UDim2.new(0, 400, 0, 260)
Frame.Position = UDim2.new(0.5, -200, 0.5, -130)
Frame.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
Frame.BorderSizePixel = 0
Frame.Visible = true

local UICorner = Instance.new("UICorner", Frame)
UICorner.CornerRadius = UDim.new(0, 8)

local Title = Instance.new("TextLabel", Frame)
Title.Size = UDim2.new(1, 0, 0, 40)
Title.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
Title.Text = "VLN Hub Command Framework"
Title.Font = Enum.Font.Code
Title.TextSize = 20
Title.TextColor3 = Color3.fromRGB(255, 255, 255)
Title.BorderSizePixel = 0

-- N√∫t ·∫©n/hi·ªán UI
local Toggle = Instance.new("TextButton", ScreenGui)
Toggle.Size = UDim2.new(0, 40, 0, 40)
Toggle.Position = UDim2.new(0, 20, 0.5, -20)
Toggle.Text = "‚â°"
Toggle.Font = Enum.Font.Code
Toggle.TextSize = 22
Toggle.TextColor3 = Color3.fromRGB(255, 255, 255)
Toggle.BackgroundColor3 = Frame.BackgroundColor3
Toggle.BorderSizePixel = 0
Instance.new("UICorner", Toggle).CornerRadius = UDim.new(1, 0)

Toggle.MouseButton1Click:Connect(function()
	local goal = Frame.Visible and UDim2.new(0.5, -200, 0.5, -130) or UDim2.new(0.5, -200, 0.5, -130)
	Frame.Visible = not Frame.Visible
	if Frame.Visible then
		TweenService:Create(Frame, TweenInfo.new(0.4, Enum.EasingStyle.Quad, Enum.EasingDirection.Out), {Size = UDim2.new(0, 400, 0, 260)}):Play()
	else
		TweenService:Create(Frame, TweenInfo.new(0.4, Enum.EasingStyle.Quad, Enum.EasingDirection.In), {Size = UDim2.new(0, 0, 0, 0)}):Play()
		task.wait(0.4)
		Frame.Visible = false
	end
end)

-- N√∫t x√≥a UI
local Close = Instance.new("TextButton", Frame)
Close.Size = UDim2.new(0, 40, 0, 40)
Close.Position = UDim2.new(1, -45, 0, 5)
Close.Text = "‚úñ"
Close.Font = Enum.Font.Code
Close.TextSize = 18
Close.TextColor3 = Color3.fromRGB(255, 80, 80)
Close.BackgroundTransparency = 1

Close.MouseButton1Click:Connect(function()
	ScreenGui:Destroy()
end)

-- TextBox
local Input = Instance.new("TextBox", Frame)
Input.Size = UDim2.new(1, -20, 0, 40)
Input.Position = UDim2.new(0, 10, 0, 60)
Input.PlaceholderText = "Nh·∫≠p l·ªánh (vd: speed 10 / speed on / speed un)"
Input.Font = Enum.Font.Code
