Input.BorderSizePixel = 0
Instance.new("UICorner", Input).CornerRadius = UDim.new(0, 6)

-- N√∫t x√°c nh·∫≠n
local Confirm = Instance.new("TextButton", Frame)
Confirm.Size = UDim2.new(0, 120, 0, 40)
Confirm.Position = UDim2.new(0.5, -60, 0, 115)
Confirm.Text = "X√°c nh·∫≠n"
Confirm.Font = Enum.Font.Code
Confirm.TextSize = 18
Confirm.TextColor3 = Color3.fromRGB(255,255,255)
Confirm.BackgroundColor3 = Color3.fromRGB(40, 100, 255)
Instance.new("UICorner", Confirm).CornerRadius = UDim.new(0, 6)

--// H·ªá th·ªëng th√¥ng b√°o (hi·ªáu ·ª©ng tr∆∞·ª£t + ti·∫øn tr√¨nh)
local function Notify(msg, color)
	local note = Instance.new("Frame", ScreenGui)
	note.Size = UDim2.new(0, 280, 0, 50)
	note.Position = UDim2.new(1, 10, 0, 20)
	note.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
	note.BorderSizePixel = 0
	Instance.new("UICorner", note).CornerRadius = UDim.new(0, 6)

	local label = Instance.new("TextLabel", note)
	label.Size = UDim2.new(1, -10, 1, 0)
	label.Position = UDim2.new(0, 10, 0, 0)
	label.Font = Enum.Font.Code
	label.TextSize = 18
	label.TextColor3 = color or Color3.fromRGB(255, 255, 255)
	label.TextXAlignment = Enum.TextXAlignment.Left
	label.BackgroundTransparency = 1
	label.Text = msg

	local bar = Instance.new("Frame", note)
	bar.Size = UDim2.new(1, 0, 0, 4)
	bar.Position = UDim2.new(0, 0, 1, -4)
	bar.BackgroundColor3 = Color3.fromRGB(40, 100, 255)
	bar.BorderSizePixel = 0

	TweenService:Create(note, TweenInfo.new(0.5, Enum.EasingStyle.Quad), {Position = UDim2.new(1, -300, 0, 20)}):Play()

	TweenService:Create(bar, TweenInfo.new(5, Enum.EasingStyle.Linear), {Size = UDim2.new(0, 0, 0, 4)}):Play()

	task.wait(5)
	TweenService:Create(note, TweenInfo.new(0.5, Enum.EasingStyle.Quad), {Position = UDim2.new(1, 10, 0, 20)}):Play()
	task.wait(0.5)
	note:Destroy()
end

--// Command API
function Cmd:CreateCmd(name, callback)
	Cmd.Commands[name] = callback
end

local function ExecuteCmd(text)
	local args = string.split(text, " ")
	local cmd = string.lower(args[1] or "")
	local param = args[2]

	if Cmd.Commands[cmd] then
		Cmd.Commands[cmd](param)
	else
		Notify("‚ö†Ô∏è L·ªánh kh√¥ng t·ªìn t·∫°i: " .. cmd, Color3.fromRGB(255, 200, 0))
	end
end

Confirm.MouseButton1Click:Connect(function()
	if Input.Text ~= "" then
		ExecuteCmd(Input.Text)
		Input.Text = ""
	end
end)

--// L·ªánh m·∫´u: Speed
Cmd:CreateCmd("speed", function(arg)
	local hum = player.Character and player.Character:FindFirstChildOfClass("Humanoid")
	if not hum then return Notify("‚ùå Kh√¥ng t√¨m th·∫•y Humanoid!", Color3.fromRGB(255,100,100)) end

	if tonumber(arg) then
		hum.WalkSpeed = tonumber(arg) * 10
		Notify("‚úÖ Speed ƒë·∫∑t th√†nh "..hum.WalkSpeed, Color3.fromRGB(100,255,100))
	elseif arg == "on" then
		hum.WalkSpeed = 100
		Notify("‚úÖ Speed b·∫≠t (100)", Color3.fromRGB(100,255,100))
	elseif arg == "off" or arg == "un" then
		hum.WalkSpeed = 16
		Notify("‚ôªÔ∏è Reset speed (16)", Color3.fromRGB(255,255,100))
	else
		Notify("‚ö†Ô∏è Tham s·ªë kh√¥ng h·ª£p l·ªá!", Color3.fromRGB(255,200,0))
	end
end)

Notify("üéâ VLN Hub Command Framework Loaded!", Color3.fromRGB(100,255,100))
